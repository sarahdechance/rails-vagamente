<%= link_to place_path(place) do %>
<div class="card">
  <div class="content-left">
  <%# end %>
    <!-- contenu de la partie gauche ici -->
    <div class="bookmark <%= place.bookmarked?(current_user) ? 'bookmark--active' : '' %>">
      <i class="far fa-bookmark"></i>
    </div>
    <div class="place-card-image">
      <% if place.image? %>
        <%= image_tag place.image %>
      <% else %>
        <%= image_tag "https://media.istockphoto.com/id/1357365823/vector/default-image-icon-vector-missing-picture-page-for-website-design-or-mobile-app-no-photo.jpg?s=612x612&w=0&k=20&c=PM_optEhHBTZkuJQLlCjLz-v3zzxp-1mpNQZsdjrbns=" %>
      <% end %>
    </div>
  </div>
  <div class="content-right">
    <%#= link_to place_path(place) do %>
    <!-- contenu de la partie droite ici -->
    <h5 class="place-name"><%= place.name %></h5>
    <div class="address">
      <%= place.address %>
    </div>

    <div class="place-tag-list">
      <% place.tag_list(2).each do |tag| %>
        <div class="place-tag">
          <p><%= tag.first.downcase %></p>
        </div>
      <% end %>
    </div>

    <div class="matching-score">
      <p><em>Matching at <span class="text-purple"><%= place.match(current_user) %> %</span></em></p>
    </div>

  </div>
</div>
 <% end %>

<script>
  const bookmark = document.querySelector('.bookmark');
  const bookmarkIcon = document.querySelector('.fa-bookmark');

  bookmark.addEventListener('click', function() {
    bookmarkIcon.classList.toggle('far');
    bookmarkIcon.classList.toggle('fas');
  });
</script>
