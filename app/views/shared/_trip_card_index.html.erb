<div class="card">
  <div class="content-left">
    <!-- contenu de la partie gauche ici -->
    <div class="place-card-image">
      <% if my_trip.nil? %>
        <%= image_tag 'https://media.istockphoto.com/id/1357365823/vector/default-image-icon-vector-missing-picture-page-for-website-design-or-mobile-app-no-photo.jpg?s=612x612&w=0&k=20&c=PM_optEhHBTZkuJQLlCjLz-v3zzxp-1mpNQZsdjrbns=' %>
      <% else %>
        <%= image_tag my_trip.places.first.image %>
      <% end %>
    </div>
  </div>
  <div class="content-right">
    <!-- contenu de la partie droite ici -->
    <h5 class="place-name">
      <%= my_trip.name %>
    </h5>
    <input type="checkbox" id="my-checkbox" name="my-checkbox">
      <label for="my-checkbox">Visit√©</label>
  </div>
</div>
