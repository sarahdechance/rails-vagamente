<div class="container">
<% if @query.present? && @places.empty? %>
  <h2><strong>No places in <%= @query.capitalize %></strong></h2>
<% elsif @query.nil? %>
  <h3>Going out like a local in <strong>BERLIN</strong></h3>
<% else %>
  <h2 class=""><strong>Places in <%= @query.capitalize %> :</strong></h2>
<% end %>
<button class="map-view" type="button">Map view</button>
<h5 class="order">Order your matches :</h5>
<div class="menu-container">
  <div class="menu">
    <select>
      <option value="">Relevance</option>
      <option value="1">Croissant</option>
      <option value="2">Décroissant</option>
    </select>
  </div>
  <div class="menu">
    <select>
      <option value="">Budget</option>
      <option value="1">Croissant</option>
      <option value="2">Décroissant</option>
    </select>
  </div>
  <div class="menu">
    <select>
      <option value="">Rating</option>
      <option value="1">Croissant</option>
      <option value="2">Décroissant</option>
    </select>
  </div>
 </div>
<div class="best-matches"><h3><strong>Best matches</strong> all categories</h3></div>

<div class="place-index-top-reco">
  <% @places.each do |place| %>
    <div class="card-place-top">
      <% if place.image? %>
        <%= image_tag place.image %>
      <% else %>
        <%= image_tag "https://images.xceed.me/clubs/covers/berghain-panorama-bar-club-berlin-xceed-d6dd.jpg" %>
      <% end %>
    </div>
  <% end %>
</div>

